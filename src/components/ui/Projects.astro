---
interface Props {
  projectTitle: string;
  projectItems: {
    title: string;
    description: string;
    github: string;
  }[];
}
const {projectTitle, projectItems} = Astro.props
---
<h2 class="text-2xl font-bold mb-6">{projectTitle}</h2>
<div class="grid gap-6 mb-12">
  {
    projectItems.map((item) => (
      <div class="p-6 bg-base-200 rounded-xl text-base-content">
        <h3 class="text-xl font-semibold mb-3">{item.title}</h3>
        <p>{item.description}</p>

        {item.github &&
          (<div class="card-actions justify-end mt-4">
            <a href={item.github} class="btn btn-sm btn-secondary text-secondary-content">
              GitHub
            </a>
          </div>)}
      </div>
    ))
  }
</div>
